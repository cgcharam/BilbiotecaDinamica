@model BilbiotecaDinamica.Models.Author

@{
    ViewData["Title"] = "Eliminar autor";
}

<h1>Eliminar autor</h1>

<h3>¿Estás seguro?</h3>
<div>
    <h4>@Model.FullName</h4>
    <dl class="row">
        <dt class="col-sm-2">Fecha de nacimiento</dt>
        <dd class="col-sm-10">@(Model.DateOfBirth?.ToString("yyyy-MM-dd"))</dd>
        <dt class="col-sm-2">Ciudad</dt>
        <dd class="col-sm-10">@Model.City</dd>
        <dt class="col-sm-2">Correo</dt>
        <dd class="col-sm-10">@Model.Email</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Eliminar</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
