@model BilbiotecaDinamica.Models.AdvancedSearchViewModel

@{
    ViewData["Title"] = "Búsqueda Avanzada";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="AdvancedSearchResults" method="get">
    <div class="form-group">
        <label asp-for="Title">Título</label>
        <input asp-for="Title" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Author">Autor</label>
        <input asp-for="Author" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Subject">Tema</label>
        <input asp-for="Subject" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Query">Texto</label>
        <input asp-for="Query" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Buscar</button>
</form>
